<Window x:Class="Presentationslager.MedlemsAktivitet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright" 
        Title="Medlems Aktivitet" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--1 - 6 är auto-->
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Medlemsaktivitet" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>
        
        <TextBlock Grid.Column= "1" Grid.Row="2"  Text= "Skriv MedlemsID som du vill ändra" Margin="5"/>
        <TextBox x:Name="MedlemsIDTextBox" Grid.Column="2" Grid.Row="2" Margin="4" Width="200"/>
        <Button x:Name="SumbitMedlemIDButton" Grid.Column="2" Grid.Row="3" Content="Hämta" Margin="5" Click="SumbitMedlemIDButton_Click"/>
        <DataGrid x:Name="MedlemsaktivitetDataGrid" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Grid.RowSpan="2" Width="400" Height="200" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
        <DataGrid.Columns>

            <DataGridTextColumn Header="Medlem ID"

                            Binding="{Binding MedlemsID}" />

            <DataGridTextColumn Header="Resurs ID"

                            Binding="{Binding BokningsID}" />

            <DataGridTextColumn Header="Starttid"

                            Binding="{Binding Starttid, StringFormat=yyyy-MM-dd HH:mm}" />
       
        </DataGrid.Columns>


        </DataGrid>


    </Grid>
</Window>

<Window x:Class="Presentationslager.RegistreraMedlem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d"  FontSize="18" FontFamily="Lucida Bright"
        Title="Registrera Medlem" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--1 - 6 är auto-->
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Registrera Medlem" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>

        <TextBlock Grid.Column="1" Grid.Row="3"  Text="Fyll i medlemens Fullständiga Namn/ Företagsnamn " Margin="5"/>
        <TextBox x:Name="MedlemsEfternamnTextBox" Grid.Column="2" Grid.Row="3" Width="200" Margin="5"/>
        <TextBlock Grid.Column="1" Grid.Row="4"  Text="Fyll i medlemens Epost" Margin="5"/>
        <TextBox x:Name="MedlemsEpostTextBox" Grid.Column="2" Grid.Row="4" Width="200" Margin="5"/>
        <TextBlock Grid.Column="1" Grid.Row="5"  Text="Fyll i medlemens Telefonnummer" Margin="5"/>
        <TextBox x:Name="MedlemsTelefonnummerTextBox" Grid.Column="2" Grid.Row="5" Width="200" Margin="5"/>
        <TextBlock Grid.Column="1" Grid.Row="6"  Text="Fyll i medlemens Medlemsnivå" Margin="5"/>
        <ComboBox x:Name="MedlemsNivåComboBox"
          Grid.Column="2"
          Grid.Row="6"
          Width="200"
          Margin="5">
            <ComboBoxItem Content="Flex"/>
            <ComboBoxItem Content="Fast"/>
            <ComboBoxItem Content="Företag"/>
        </ComboBox>

        <TextBlock Grid.Column="1" Grid.Row="7"  Text="Fyll i medlemens Betalstatus" Margin="5"/>
        <ComboBox x:Name="MedlemsBetalstatusComboBox"
          Grid.Column="2"
          Grid.Row="7"
          Width="200"
          Margin="5">
            <ComboBoxItem Content="Obetald"/>
            <ComboBoxItem Content="Betald"/>
        </ComboBox>
        
       



    </Grid>
</Window>
<Window x:Class="Presentationslager.SkapaBokning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="Skapa Bokning" Height="700" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Skapa bokning"  FontFamily="Segoe Script" FontSize="28" Grid.ColumnSpan="3" Margin="15" Foreground="HotPink"/>

        <TextBlock Grid.Column="1" Grid.Row="2"  Text="Fyll i MedlemsID" Margin="5"/>
        <TextBox x:Name="MedlemsIDTextBox" Grid.Column="2" Grid.Row="2" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="4" Text="Välj startdatum" Margin="5"/>
        <Calendar Grid.Column="2" Grid.Row="4" x:Name="BokningsCalander" DisplayMode="Month" SelectionMode="SingleDate" Margin="5"/>

        <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
            <TextBlock Text="Starttid:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <ComboBox x:Name="TimmarComboBox" Width="60" />
            <TextBlock Text=":" VerticalAlignment="Center" />
            <ComboBox x:Name="MinuterComboBox" Width="60" />
        </StackPanel>

        <TextBlock Grid.Column="1" Grid.Row="6" Text="Längd (timmar):" Margin="5"/>
        <TextBox x:Name="LängdTextBox" Grid.Column="2" Grid.Row="6" Width="50" HorizontalAlignment="Left" Text="1" Margin="5"/>

        <Button x:Name="SökLedigaButton" Content="Sök lediga resurser" Grid.Column="2" Grid.Row="7" Margin="5" Click="SökLedigaButton_Click" Background="LightBlue"/>

        <TextBlock Grid.Column="1" Grid.Row="8" Text="Välj ledig resurs" Margin="5"/>
        <ComboBox x:Name="VäljresursComboBox" Grid.Column="2" Grid.Row="8" Width="200" Margin="5" HorizontalAlignment="Left" > 
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Namn}" FontWeight="Bold" Width="120"/>
                    <TextBlock Text=" | Typ: " Foreground="Gray"/>
                    <TextBlock Text="{Binding Typ}" Width="120"/>
                    <TextBlock Text=" | Platser: " Foreground="Gray"/>
                    <TextBlock Text="{Binding Kapacitet}"/>
                </StackPanel>
            </DataTemplate>
        </ComboBox.ItemTemplate>
        </ComboBox>

        <Button x:Name="SparaBokningButton" Content="Boka nu" Grid.Column="2" Grid.Row="10" Margin="10" Click="SparaBokningButton_Click" IsEnabled="False" Height="40"/>

        
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Välj medlem (lista)" Margin="5"/>
        <ComboBox x:Name="MedlemComboBox" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="6" Width="550" Margin="4" DisplayMemberPath="DisplayText" SelectionChanged="MedlemComboBox_SelectionChanged"/>



    </Grid>
</Window>

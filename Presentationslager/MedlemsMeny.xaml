<Window x:Class="Presentationslager.MedlemsMeny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="Medlemsmeny" Height="450" Width="510">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Medlemmar" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>

        <Button x:Name="RegistreraMedlemButton" Content="Registrera ny medlem" Grid.Column="1" Grid.Row="2" Margin="10" Click="RegistreraMedlemButton_Click" Height="50"/>

        <Button x:Name="UppdateraMedlemButton" Content="Uppdatera medlem" Grid.Column="1" Grid.Row="3" Margin="10" Click="UppdateraMedlemButton_Click" Height="50"/>
        
        <Button x:Name="MedlemsStatistikButton" Grid.Column="1" Grid.Row="4" Content="Medlemsaktivitet" Margin="10" Click="MedlemsStatistikButton_Click" Height="50"/>
        
        <Button x:Name="VisaAllaMedlemar" Grid.Column="1" Grid.Row="5" Content="Alla medlemmar" Margin="10" Click="VisaAllaMedlemar_Click" Height="50"/>





    </Grid>
</Window>

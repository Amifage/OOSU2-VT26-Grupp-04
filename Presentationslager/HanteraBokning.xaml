<Window x:Class="Presentationslager.HanteraBokning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"

    Title="Uppdatera Bokning" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Hantera Bokning" FontSize="28" Margin="15" Foreground="HotPink" FontFamily="Segoe Script"/>

        <DataGrid x:Name="BokningsDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="10" SelectionChanged="BokningsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bokning ID" Binding="{Binding BokningsID}" Width="Auto"/>
                <DataGridTextColumn Header="Medlem" Binding="{Binding medlem.Namn}" Width="*"/>
                <DataGridTextColumn Header="Resurs" Binding="{Binding resurs.Namn}" Width="*"/>
                <DataGridTextColumn Header="Start" Binding="{Binding Starttid, StringFormat=yyyy-MM-dd HH:mm}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Ändra Medlem:"/>
            <ComboBox x:Name="MedlemComboBox" DisplayMemberPath="DisplayText" Margin="5"/>
            <TextBlock Text="Ändra Resurs:"/>
            <ComboBox x:Name="ResursComboBox" DisplayMemberPath="DisplayText" Margin="5"/>

            <TextBlock Text="Ny Starttid (yyyy-MM-dd HH:mm):"/>
            <TextBox x:Name="StarttidTextBox" Margin="5"/>
            <TextBlock Text="Ny Sluttid (yyyy-MM-dd HH:mm):"/>
            <TextBox x:Name="SluttidTextBox" Margin="5"/>

            <UniformGrid Columns="2" Margin="0,10,0,0">
                <Button Content="Spara Ändringar" Click="SparaButton_Click" Margin="5" Background="#FFB4E6B4"/>
                <Button Content="Ta bort Bokning" Click="TaBortButton_Click" Margin="5" Background="#FFD8997C"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
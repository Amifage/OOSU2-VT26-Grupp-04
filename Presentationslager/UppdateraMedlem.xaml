<Window x:Class="Presentationslager.UppdateraMedlem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"

    Title="Uppdatera Medlem" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Uppdatera Medlem" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>


        <TextBlock Grid.Column= "1" Grid.Row="2"  Text= "Skriv MedlemsID som du vill ändra" Margin="5"/>
        <TextBox x:Name="MedlemsIDTextBox" Grid.Column="2" Grid.Row="2" Margin="4" Width="200"/>
        <Button x:Name="SumbitMedlemIDButton" Grid.Column="2" Grid.Row="3" Content="Hämta" Margin="5" Click="SumbitMedlemIDButton_Click" />
        
        
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Välj medlem (lista)" Margin="5"/>
        <ComboBox x:Name="MedlemComboBox" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="6" Width="450" Margin="4" DisplayMemberPath="DisplayText" SelectionChanged="MedlemComboBox_SelectionChanged"/>

       
        <TextBlock Grid.Column="1" Grid.Row="6" Text="Medlemens namn" Margin="5" />
        <TextBox Grid.Column="2" Grid.Row="6" x:Name="NamnTextBox" Width="200" Margin="5" />
        <TextBlock Grid.Column="1" Grid.Row="7" Text="Medlemens epost" Margin="5" />
        <TextBox Grid.Column="2" Grid.Row="7" x:Name="EpostTextBox" Width="200" Margin="5"/>
        <TextBlock Grid.Column="1" Grid.Row="8" Text="Medlemens telefonnummer" Margin="5" />

        <TextBox Grid.Column="2" Grid.Row="8" x:Name="TelefonTextBox" Width="200"/>
        <Button x:Name="SparaÄndradMedlemButton" Grid.Column="2" Grid.Row="9" Content="Spara" Margin="5" Click="SparaÄndradMedlemButton_Click" />
       
        <TextBlock Grid.Column="1" Grid.Row="10" Text="Ta bort medlem" Margin="5" />
        <Button x:Name="RaderaMedlemButton" Grid.Column="2" Grid.Row="10" Content="Radera medlem" Margin="5" Click="RaderaMedlemButton_Click" />

    </Grid>
</Window>
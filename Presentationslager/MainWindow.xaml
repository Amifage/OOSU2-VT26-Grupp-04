<Window x:Class="Presentationslager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"

        Title="Samverket login" Height="450" Width="550" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="300" />
       
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Samverket personal" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Användarnamn" Margin="5"/>

        <TextBox x:Name="EmailTextBox" Grid.Column="2" Grid.Row="2" Width="200" Height="30" Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Text="Lösenord" Margin="10"/>

        <Image Grid.Column="2" Grid.Row="5" Source="/Skärmavbild 2026-02-20 kl. 09.18.11.png" Margin="5" Width="200" HorizontalAlignment="Right"/>

        <PasswordBox x:Name="LösenordTextBox" Grid.Row="3" Grid.Column="2" Width="200" Height="30" Margin="5" />

        <Button x:Name="LoggaInButton" Content="Logga in" Grid.Column=" 2" Grid.Row="4" Margin="10" Width="200" Height="30" VerticalAlignment="Top" Click="LoggaInButton_Click" Background="HotPink"/>
    
    </Grid>
</Window>

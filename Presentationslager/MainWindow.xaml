<Window x:Class="Presentationslager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"

        Title="Samverket login" Height="450" Width="800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <!--1 - 6 är uto-->
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Samverket personal" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Användarnamn" Margin="5"/>

        <TextBox x:Name="EmailTextBox" Grid.Column="2" Grid.Row="2" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Text="Lösenord" Margin="5"/>

        <Image Grid.Column="4" Grid.Row="5" Source="/istockphoto-1192884194-170667a.jpg" Margin="5" Width="200" />

        <PasswordBox x:Name="LösenordTextBox" Grid.Row="3" Grid.Column="2" Width="200" Margin="5" />

        <Button x:Name="LoggaInButton" Content="Logga in" Grid.Column=" 2" Grid.Row="4" Margin="10" Click="LoggaInButton_Click" />

        <Image Grid.Column="5" Grid.Row="1" Grid.RowSpan="6" Grid.ColumnSpan="3" MaxHeight="200" MaxWidth="200"/>
    </Grid>
</Window>

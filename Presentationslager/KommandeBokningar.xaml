<Window x:Class="Presentationslager.KommandeBokningar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright" 
        Title="Kommande Bokningar" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Kommande bokningar" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>

        <DataGrid x:Name="BokningsDataGrid" AutoGenerateColumns="False" Width="600" Height="250" Grid.Column="1" Grid.Row="2" IsReadOnly="True" Margin="10">
          
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Medlem" Binding="{Binding medlem.Namn}" />

                    <DataGridTextColumn Header="Resurs" Binding="{Binding resurs.Namn}" />

                   <DataGridTextColumn Header="Starttid"

                      Binding="{Binding Starttid, StringFormat=yyyy-MM-dd HH:mm}" />

                   <DataGridTextColumn Header="Sluttid"

                        Binding="{Binding Sluttid, StringFormat=yyyy-MM-dd HH:mm}" />
                </DataGrid.Columns>

                
        </DataGrid>
    </Grid>
</Window>
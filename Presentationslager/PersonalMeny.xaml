<Window x:Class="Presentationslager.PersonalMeny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="PersonalMeny" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Personal meny" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>
        <Button x:Name="SkapaBokningButton" Content="Skapa bokning" Grid.Column="1" Grid.Row="2" Margin="10" Click="SkapaBokningButton_Click" />
        <Button x:Name="HanteraBokningButton" Content="Hantera bokning" Grid.Column=" 2" Grid.Row="2" Margin="10" Click="HanteraBokningButton_Click" />
        <Button x:Name="RegistreraMedlemButton" Content="Registrera medlem" Grid.Column=" 1" Grid.Row="3" Margin="10" Click="RegistreraMedlemButton_Click" />
        <Button x:Name="KommandeBoknigarButton" Content="Visa kommande bokningar" Grid.Column="3" Grid.Row="3" Margin="10" Click="KommandeBoknigarButton_Click"/>
        <Button x:Name="UppdateraMedlemButton" Content="Uppdatera medlem" Grid.Column=" 2" Grid.Row="3" Margin="10" Click="UppdateraMedlemButton_Click" />
        <Button x:Name="RegistreraResursButton" Content="Registrera resurs" Grid.Column="1" Grid.Row="4" Margin="10" Click="RegistreraResursButton_Click" />
        <Button x:Name="UppdateraResursButton" Content="Uppdatera resurs" Grid.Column="2" Grid.Row="4" Margin="10" Click="UppdateraResursButton_Click" />
        <Button x:Name="VisaTillgänglighetButton" Content="Visa tillgänglighet" Grid.Column="1" Grid.Row="5" Margin="10" Click="VisaTillgänglighetButton_Click" />
        <Button x:Name="VisaStatistikButton" Content="Visa statistik" Grid.Column="1" Grid.Row="6" Margin="10" Click="VisaStatistikButton_Click" />
    </Grid>
</Window>
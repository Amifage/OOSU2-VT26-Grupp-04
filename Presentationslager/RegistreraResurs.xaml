<Window x:Class="Presentationslager.RegistreraResurs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="Registrera Resurs" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--1 - 6 är auto-->
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Registrera Resurs" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>
        <TextBlock Grid.Column="1" Grid.Row="2"  Text="Resurs Namn" Margin="5"/>
        <TextBox x:Name="MedlemsEfternamnTextBox" Grid.Column="2" Grid.Row="2" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1"
            Grid.Row="3"
            Text="Resurs Typ"
            Margin="5"/>
        <ComboBox x:Name="ResurstypComboBox"
         Grid.Column="2" Grid.Row="3" Width="200" Margin="5">
            <ComboBoxItem Content="Skrivbord"/>
            <ComboBoxItem Content="Mötesrum"/>
            <ComboBoxItem Content="Konferenssal"/>
        </ComboBox>
        <TextBlock Grid.Column="1" Grid.Row="4"  Text="Resurs Kapacitet" Margin="5"/>
        <TextBox x:Name="MedlemsEpostTextBox" Grid.Column="2" Grid.Row="4" Width="200" Margin="5"/>
        <TextBlock Grid.Column="1" Grid.Row="5"  Text="Utrustning" Margin="5"/>
        <!-- Temp för utrustning och status -->
        <ComboBox x:Name="ResursUtrustningsComboBox"
          Grid.Column="2"
          Grid.Row="5"
          Width="200"
          Margin="5">
            <ComboBoxItem Content="Projektor"/>
            <ComboBoxItem Content="Whiteboard"/>
            <ComboBoxItem Content="Skärm"/>
        </ComboBox>
        <TextBlock Grid.Column="1" Grid.Row="6"  Text="Status" Margin="5"/>
        <ComboBox x:Name="ResursStatusComboBox"
          Grid.Column="2"
          Grid.Row="6"
          Width="200"
          Margin="5">
            <ComboBoxItem Content="Bokad"/>
            <ComboBoxItem Content="Ledig"/>
            <ComboBoxItem Content="Otillgänglig"/>
        </ComboBox>
    </Grid>
</Window>
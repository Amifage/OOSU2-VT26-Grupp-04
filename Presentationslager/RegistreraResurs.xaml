<Window x:Class="Presentationslager.RegistreraResurs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentationslager"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="Registrera Resurs" Height="650" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" Text="Registrera Resurs" FontFamily="Segoe Script" Foreground="HotPink" Grid.ColumnSpan="3" Margin="15"/>
        <TextBlock Grid.Column="1" Grid.Row="2"  Text="Resurs Namn" Margin="5"/>
        <TextBox x:Name="ResursNamnTextBox" Grid.Column="2" Grid.Row="2" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1"
            Grid.Row="3"
            Text="Resurs Typ"
            Margin="5"/>
        <ComboBox x:Name="ResurstypComboBox"
         Grid.Column="2" Grid.Row="3" Width="200" Margin="5">
            <ComboBoxItem Content="Skrivbord"/>
            <ComboBoxItem Content="Mötesrum"/>
            <ComboBoxItem Content="Konferenssal"/>
        </ComboBox>
        <TextBlock Grid.Column="1" Grid.Row="4"  Text="Resurs Kapacitet" Margin="5"/>
        <TextBox x:Name="ResursKapacitetTextBox" Grid.Column="2" Grid.Row="4" Width="200" Margin="5"/>
  


        <Button x:Name="SparaNyResursButton" Grid.Column="2" Grid.Row="8" Margin="5" Content="Spara" Click="SparaNyResursButton_Click" />


        <TextBlock Grid.Column="1" Grid.Row="9" Text="Kopplad utrustning" Margin="5"/>
        <ListView x:Name="KoppladListView" Grid.Column="2" Grid.Row="9" Grid.ColumnSpan="6" Height="140" Margin="5"  SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Inv.nr" DisplayMemberBinding="{Binding Inventarienummer}" Width="70"/>
                    <GridViewColumn Header="Namn" DisplayMemberBinding="{Binding Namn}" Width="160"/>
                    <GridViewColumn Header="Kategori" DisplayMemberBinding="{Binding Kategori}" Width="120"/>
                    <GridViewColumn Header="Skick" DisplayMemberBinding="{Binding Skick}" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Column="2" Grid.Row="14" Width="140" Margin="11" Content="Koppla →" Click="KopplaButton_Click"/>

        <TextBlock Grid.Column="1" Grid.Row="10" Text="Okopplad utrustning" Margin="5"/>
        <ListView x:Name="OkoppladListView" Grid.Column="2" Grid.Row="10" Grid.ColumnSpan="6" Height="140" Margin="5" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Inv.nr" DisplayMemberBinding="{Binding Inventarienummer}" Width="70"/>
                    <GridViewColumn Header="Namn" DisplayMemberBinding="{Binding Namn}" Width="160"/>
                    <GridViewColumn Header="Kategori" DisplayMemberBinding="{Binding Kategori}" Width="120"/>
                    <GridViewColumn Header="Skick" DisplayMemberBinding="{Binding Skick}" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        
        
    </Grid>
</Window>